<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".activities.LoginActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/d_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:background="@color/buttonColor">


        <com.prithwiraj.ibc.utils.CustomTitleTextView
            android:id="@+id/tv_back_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/skycolor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.prithwiraj.ibc.utils.CustomTitleTextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="@color/BlackColor"
            android:textSize="20dp"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_mobile_no_login"
            android:background="@drawable/et_state"
            android:textColor="@color/BlackColor"
            android:hint="Your Email or Mobile Number"
            android:textColorHint="@color/iosGrayColor"
            android:inputType="textEmailAddress"
            android:padding="10dp" />


        <Button
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/bt_ganarate_otp_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="@drawable/blue_big_button"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <com.prithwiraj.ibc.utils.CustomTitleTextView
                android:id="@+id/tv_signuptext_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:text="New User? Tap here to Sign Up"
                android:textColor="@color/skycolor"
                android:textSize="18sp" />



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>